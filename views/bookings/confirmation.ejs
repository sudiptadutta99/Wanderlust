
<% layout("/layouts/boilerplate") %>

<div class="container my-5">
    <div class="text-center mb-5">
      <i class="fas fa-check-circle fa-4x text-success"></i>
      <h1 class="mt-3" style="font-weight: 700;">Booking Confirmed!</h1>
      <p class="lead">Thank you for booking with WanderLust.</p>
    </div>
  
    <div class="card shadow p-4">
      <h4 class="mb-4">Booking Details</h4>
      <ul class="list-group list-group-flush mb-4">
        <!-- <li class="list-group-item"><strong>Booking ID:</strong> <%= booking.bookingId %></li> -->
        <li class="list-group-item"><strong>Booking ID:</strong> <%= booking._id %></li>

        <li class="list-group-item"><strong>Listing:</strong> <%= booking.listing.title %></li>
        <li class="list-group-item"><strong>Check-in:</strong> <%= booking.checkin.toDateString() %></li>
        <li class="list-group-item"><strong>Check-out:</strong> <%= booking.checkout.toDateString() %></li>
        <li class="list-group-item"><strong>Guests:</strong> <%= booking.guests %></li>
        <li class="list-group-item"><strong>Total Price:</strong> â‚¹<%= booking.totalPrice %></li>
        <li class="list-group-item"><strong>Payment Method:</strong> <%= booking.paymentMethod %></li>
        <li class="list-group-item"><strong>Status:</strong> 
          <span class="badge bg-success text-uppercase"><%= booking.paymentStatus %></span>
        </li>
      </ul>
  
      <div class="text-center mt-4">
        <a href="/listings" class="btn btn-outline-primary me-2">
          <i class="fas fa-compass me-1"></i> Explore More Listings
        </a>
        <a href="/bookings" class="btn btn-primary">
          <i class="fas fa-calendar-check me-1"></i> See Your Bookings
        </a>
      </div>
    </div>
</div>
  