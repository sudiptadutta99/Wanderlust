<% layout("/layouts/boilerplate") %>

<div class="row mt-5">
    <h1 class="col-6 offset-3 text-center mb-4">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" novalidate class="needs-validation shadow p-4 rounded bg-light">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>

            <button class="btn btn-danger w-100">Login</button>
        </form>

        <div class="text-center mt-3">
            <p class="text-muted">New here? <a href="/signup" class="text-danger fw-bold text-decoration-none">Create an account</a></p>
        </div>
    </div>
</div>
