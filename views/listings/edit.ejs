<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <h3>Edit your listing</h3>
        <form 
            method="POST" 
            action="/listings/<%= listing._id %>?_method=PUT" 
            novalidate
            class="needs-validation"
            enctype="multipart/form-data"
            >
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input 
                    type="text" 
                    name="listing[title]" 
                    value="<%= listing.title %>"
                    class="form-control"
                    required
                >
                
            <!-- this div only works when title valid -->
            <div class="valid-feedback">Titlle looks good!</div>
            </div>
            
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea 
                    name="listing[description]" 
                    class="form-control"
                    required
                >
                    <%= listing.description %>
                </textarea>
                <div class="invalid-feekback">Please enter a short description</div>

            </div>
            <div class="mb-3">
                Original Listing Image  <br>
                <img src="<%= originalImageUrl %>" alt="">
            </div>
            <div class="mb-3">
                <label for="image-url" class="form-label">Upload new Image</label>
                <input 
                    type="file" 
                    name="listing[image][url]" 
                    value="<%= listing.image.url %>"
                    class="form-control"

                >
                <div class="invalid-feekback">Please enter a valid link for image</div>

            </div>
            <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input 
                            type="number" 
                            name="listing[price]" 
                            value="<%= listing.price %>"
                            class="form-control"
                            required
                        >
                        <div class="invalid-feekback">Please enter a valid price</div>

                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input 
                            type="text" 
                            name="listing[country]" 
                            value="<%= listing.country %>"
                            class="form-control"
                            required
                    />
                    <div class="invalid-feekback">Please enter a valid country</div>

                    </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input 
                    type="text" 
                    name="listing[location]" 
                    value="<%= listing.location %>"
                    class="form-control"
                    required
                >
                <div class="invalid-feekback">Location should be valid</div>

            </div>

            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select name="listing[category]" class="form-control" required>
                    <% const categories = ["Beds", "Cities", "Mountains", "Castles", "Pools", "Camps", "Farms", "Arctic", "Domes", "Boats", "Cabins", "Lakes", "Hotels", "Beaches", "Apartments"]; %>
                    <% categories.forEach(cat => { %>
                        <option value="<%= cat %>" <%= listing.category === cat ? "selected" : "" %>><%= cat %></option>
                    <% }); %>
                </select>
                <div class="invalid-feedback">Please select a category</div>
            </div>
            
            

            <button class="btn btn-dark edit-btn mt-3">Save Changes</button>
        </form>
 
    </div>
</div>

