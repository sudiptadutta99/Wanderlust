<% layout("/layouts/boilerplate") %>
<div class="row mt-5">
    <div class="col-8 offset-2">
        <h3 class="text-center mb-4">Start Your Hosting Journey</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation shadow p-4 rounded bg-light" enctype="multipart/form-data">
            
            <!-- Title Input -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="Add catchy title" class="form-control" required>
                <div class="valid-feedback">Title looks good!</div>
            </div>

            <!-- Description Textarea -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
            </div>

            <!-- Image Upload -->
            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image</label>
                <input type="file" name="listing[image]" class="form-control" required>
            </div>

            <div class="row">
                <!-- Price Input -->
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" placeholder="Enter price" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>

                <!-- Country Input -->
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="Enter country" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid country</div>
                </div>
            </div>

            <!-- Location Input -->
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="Enter location" class="form-control" required>
                <div class="invalid-feedback">Location should be valid</div>
            </div>

            <!-- Category Dropdown -->
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select name="listing[category]" class="form-control" required>
                    <option disabled selected>Select category</option>
                    <option value="Beds">Beds</option>
                    <option value="Cities">Cities</option>
                    <option value="Mountains">Mountains</option>
                    <option value="Castles">Castles</option>
                    <option value="Pools">Pools</option>
                    <option value="Camps">Camps</option>
                    <option value="Farms">Farms</option>
                    <option value="Arctic">Arctic</option>
                    <option value="Domes">Domes</option>
                    <option value="Boats">Boats</option>
                    <option value="Cabins">Cabins</option>
                    <option value="Lakes">Lakes</option>
                    <option value="Hotels">Hotels</option>
                    <option value="Beaches">Beaches</option>
                    <option value="Apartments">Apartments</option>
                </select>
            </div>

            <!-- Submit Button -->
            <button class="btn btn-danger w-100 mt-3">Add Listing</button>
        </form>
    </div>
</div>
